<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:dtos="clr-namespace:MauiUltimateTemplate.Application.DTOs;assembly=MauiUltimateTemplate.Application"
    xmlns:viewModels="clr-namespace:MauiUltimateTemplate.Application.UI.ViewModels;assembly=MauiUltimateTemplate.Application.UI"
    x:DataType="viewModels:MainViewModel"
    x:Class="MauiUltimateTemplate.MainPage">
    <Grid
        RowDefinitions="*, Auto"
        Padding="20">

        <!-- Список заметок -->
        <CollectionView
            BackgroundColor="Yellow"
            ItemsSource="{Binding Notes}"
            Grid.Row="0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid
                        x:DataType="dtos:NoteDto"
                        BackgroundColor="Aqua"
                        HorizontalOptions="Fill"
                        ColumnDefinitions="200,*,auto,200">
                        <Label
                            Grid.Column="0"
                            Text="{Binding Id}" />
                        <VerticalStackLayout
                            Grid.Column="1">
                            <Label
                                Text="{Binding Title}"
                                FontAttributes="Bold" />
                            <Label
                                Text="{Binding Content}"
                                TextColor="Gray" />
                        </VerticalStackLayout>
                        <Label
                            Grid.Column="2"
                            Text="{Binding CreatedAt}"
                            VerticalOptions="End" />

                        <Button
                            Grid.Column="3"
                            Text="Удалить"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:MainViewModel}}, Path=DeleteNoteCommand}"
                            CommandParameter="{Binding Id}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <VerticalStackLayout
            Grid.Row="1"
            Spacing="10"
            Padding="10">
            <Entry
                Placeholder="Заголовок"
                Text="{Binding NewNoteTitle}" />
            <Editor
                Placeholder="Текст заметки"
                Text="{Binding NewNoteContent}"
                HeightRequest="100" />
            <Button
                Text="Сохранить"
                Command="{Binding AddNoteCommand}" />
        </VerticalStackLayout>
    </Grid>

</ContentPage>