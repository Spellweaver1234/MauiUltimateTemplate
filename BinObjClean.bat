@echo off
chcp 65001 > nul
echo.
echo ======================================================
echo   Удаление временных папок сборки (bin и obj)...
echo ======================================================

REM Удаляем папки bin и obj во всех подкаталогах
for /d /r . %%d in (bin,obj) do (
    if exist "%%d" (
        echo Удаление: "%%d"
        rd /s /q "%%d"
    )
)

echo.
echo Очистка завершена! Теперь можно делать Rebuild.
pause
